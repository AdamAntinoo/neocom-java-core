<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.LocationStyle" parent="NameStyle">
        <item name="android:textColor">@color/orangeText</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.EntryLabelStyle" parent="LabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.SectionStyle" parent="LabelStyle">
        <item name="android:background">@drawable/bottomwhiteline</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="locationSecurityStyle" parent="LocationStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#FFAA0000</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="locationRegionStyle" parent="LocationStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="collapsedFragmentLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.quantityBlock">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.quantityBlock.count">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.LabelBottomLineStyle" parent="LabelStyle">
        <item name="android:background">@drawable/bottomwhiteline</item>
    </style>

    <style name="AppTheme.LabelUpLineStyle" parent="LabelStyle.Small">
        <item name="android:background">@drawable/topwhiteline</item>
    </style>

    <style name="AppTheme.PriceStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="nameStyle" parent="NameStyle"></style>

    <style name="locationStyle" parent="LocationStyle"></style>

    <style name="AppTheme.LabelStyle" parent="LabelStyle"></style>

    <style name="AppTheme.sellPriceStyle" parent="AppTheme.PriceStyle">
        <item name="android:textColor">@color/greenPrice</item>
    </style>

    <style name="AppTheme.ItemNameStyle" parent="NameStyle"></style>

    <style name="Theme.EveDroidRubicon.LabelStyle" parent="LabelStyle"></style>

    <style name="Theme.EveDroidRubicon.LocationStyle" parent="LocationStyle"></style>
    
    <style name="EIA.ThemedName" parent="NameStyle" />

    <style name="locationStationStyle" parent="LocationStyle" />

    <style name="Theme.EveDroid.DialogTitle" parent="Theme.Crios.DialogTitle" />

    <style name="Theme.EveDroid.DialogLabel" parent="Theme.Crios.DialogLabel" />

    <style name="Theme.EveDroid.DialogNonEditableText" parent="Theme.Crios.DialogNonEditableText" />

    <style name="Theme.EveDroid.DialogSpinner" parent="Theme.Crios.DialogSpinner" />

    <style name="Theme.Crios" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/dimmedbackground60</item>
    </style>

    <style name="Theme.Crios.DialogTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dialogLabelTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Crios.DialogLabel" parent="Theme.Crios.DialogTitle">
        <item name="android:textColor">@color/dialogLabelTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Crios.DialogNonEditableText" parent="Theme.Crios.DialogTitle">
        <item name="android:textColor">@color/dialogNonEditableTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Crios.DialogSpinner">
        <item name="android:textColor">@color/dialogSpinnerTextColor</item>
        <item name="android:background">@color/dialogSpinnerBackgroundColor</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>