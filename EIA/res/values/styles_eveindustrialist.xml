<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Widget"></style>

    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="Widget.CirclePageIndicator" parent="Widget">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="AppTheme.ActivityBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">#FF000000</item>
        <item name="android:contentDescription">@string/default_description</item>
        <item name="android:src">@drawable/dimmedbackground60</item>
    </style>

    <style name="AppTheme.InitializationStateMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NameStyle.Actionable">
        <item name="android:textColor">@color/greenGlowText</item>
    </style>

    <style name="NameStyle.Intense">
        <item name="android:textColor">@color/orangeText</item>
    </style>

    <style name="NameStyle.Region">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NumberStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="NumberStyle.LocationData">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NumberStyle.ManufacturePrice">
        <item name="android:textColor">@color/redName</item>
    </style>

    <style name="NumberStyle.Big">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="NumberStyle.XL">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LabelStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="LabelStyle.BottomLine">
        <item name="android:background">@drawable/bottomwhiteline</item>
    </style>

    <style name="LabelStyle.TopLine">
        <item name="android:background">@drawable/topwhiteline</item>
    </style>

    <style name="LabelStyle.Small">
        <item name="android:textSize">7sp</item>
    </style>

    <style name="LabelStyle.Small.BottomLine">
        <item name="android:background">@drawable/bottomwhiteline</item>
    </style>

    <style name="LabelStyle.Small.TopLine">
        <item name="android:background">@drawable/topwhiteline</item>
    </style>

    <style name="TimeStyle" parent="NameStyle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TimeStyle.Small" parent="NameStyle">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="ItemIconStyle">
        <item name="android:layout_width">@dimen/itemIcon48</item>
        <item name="android:layout_height">@dimen/itemIcon48</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">2px</item>
        <item name="android:contentDescription">@string/imageview_defaultcontent</item>
        <item name="android:src">@drawable/defaultitemicon</item>
    </style>

    <style name="ItemIconStyle.Size96">
        <item name="android:layout_width">@dimen/itemIcon96</item>
        <item name="android:layout_height">@dimen/itemIcon96</item>
    </style>

    <style name="ItemIconStyle.Size64">
        <item name="android:layout_width">@dimen/itemIcon64</item>
        <item name="android:layout_height">@dimen/itemIcon64</item>
    </style>

    <style name="ItemIconStyle.Size48">
        <item name="android:layout_width">@dimen/itemIcon48</item>
        <item name="android:layout_height">@dimen/itemIcon48</item>
    </style>

    <style name="ItemIconStyle.Size40">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="ItemIconStyle.Size32">
        <item name="android:layout_width">@dimen/itemIcon32</item>
        <item name="android:layout_height">@dimen/itemIcon32</item>
    </style>

    <style name="ItemIconStyle.Size24">
        <item name="android:layout_width">@dimen/itemIcon24</item>
        <item name="android:layout_height">@dimen/itemIcon24</item>
    </style>

    <style name="PriceStyle" parent="NumberStyle">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="PriceStyle.Seller">
        <item name="android:textColor">@color/redPrice</item>
        <item name="android:drawableLeft">@drawable/ic_buy</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="PriceStyle.Buyer">
        <item name="android:textColor">@color/greenPrice</item>
        <item name="android:drawableLeft">@drawable/ic_sell</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="PriceStyle.Cost">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawableLeft">@drawable/ic_produce</item>
    </style>

    <style name="PriceStyle.Invention">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawableLeft">@drawable/invention</item>
    </style>

    <style name="LocationStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LocationStyle.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="RightArrow">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">-4dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:visibility">visible</item>
        <item name="android:src">@drawable/arrowleft</item>
    </style>

    <style name="LocationStyle.Role">
        <item name="android:background">@drawable/blueroundedbox</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="JobProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">false</item>
    </style>

    <style name="Widget.ProgressBar.Vertical">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/vertical_progressbar</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minWidth">1dip</item>
        <item name="android:maxWidth">12dip</item>
    </style>

    <style name="Widget.ProgressBar.Queue">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/queue_progressbar</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minWidth">1dip</item>
        <item name="android:maxWidth">12dip</item>
    </style>

    <style name="SkillBlock">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

</resources>